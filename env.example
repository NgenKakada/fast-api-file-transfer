# Source SFTP configuration
SOURCE_SFTP_HOST=sftp.sourcehost.com
SOURCE_SFTP_USER=source_user
SOURCE_SFTP_PASS=source_password
SOURCE_FILE_DIR=/path/to/source/files

# Destination SFTP configuration
DESTINATION_SFTP_HOST=sftp.destinationhost.com
DESTINATION_SFTP_USER=destination_user
DESTINATION_SFTP_PASS=destination_password
DESTINATION_FILE_DIR=/path/to/destination/files

# Temporary local directory for file storage
TEMPORARY_FILE_DIR=/path/to/temp/dir

# Telegram bot configuration
BOT_TOKEN=your_bot_token
BOT_CHANNEL=@your_channel_name

# Scheduler configuration (cron-like)
SCHEDULER_MINUTE=0
SCHEDULER_HOUR=3  # Runs daily at 3 AM

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
